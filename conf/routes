# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index

POST	/submitChoice							Application.processChoice

# Ignore favicon requests
GET     /favicon.ico                            404

GET 	/application/login/{username}					Application.login
GET 	/application/login/{username}/{password}		Application.login
GET 	/application/getUserInformation/{username}/{authentication}

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}

